<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:id="@+id/submail_login_web_bg_layout">

    <RelativeLayout
        android:id="@+id/submail_login_web_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#FFFFFFFF">

        <ImageView
            android:id="@+id/submail_login_web_nav_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:clickable="true"
            android:src="@drawable/exit"/>

        <TextView
            android:id="@+id/submail_login_web_nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="服务条款"
            android:textSize="17sp" />
    </RelativeLayout>

    <WebView
        android:id="@+id/submail_login_webview"
        android:layout_below="@+id/submail_login_web_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
